{% extends 'base.html.twig' %}

{% block title %}Activités{% endblock %}

{% block body %}

    <div class="container">

        <div class="row">
            <h1 class="col-md-4 offset-md-4 text-center"><strong>EVENEMENTS</strong></h1>
        </div>

        {% for activity in activities %}
            <div class="row eventSeparation">
                <div class="card text-left text-white border-dark bg-brown col-md-6 offset-md-3">
                    <h2 class="card-header">{{ activity.name }}</h2>
                    <img class="card-img-top" src="{{ asset(actitity.image.AssetPath) }}" alt="{{ activity.image.name }}">
                    <div class="card-body">
                        <p class="card-text">{{ activity.description }}</p>
                        <div class="row">
                            <div class="col-sm-3 offset-sm-1 text-left bg-brown" style="border: #343a40 3px solid; border-radius: 10px">
                                Prix : {{ activity.price }}€
                            </div>
                            <div class="col-sm-4 offset-sm-3 text-left bg-brown" style="border: #343a40 3px solid; border-radius: 10px">
                                Date : {{ activitiy.date|date('m-d-Y') }}
                            </div>
                        </div>
                        <a href="#" class="btn btn-light col-sm-4 offset-sm-4" style="border: #343a40 3px solid; border-radius: 10px">Voir</a>
                    </div>
                </div>
            </div>
        {% else %}
            <p>Aucun activité retourné</p>
        {% endfor %}





