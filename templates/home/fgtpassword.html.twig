{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}




{% block body %}


    <div class="container" style="margin-bottom: 50px">
        <h1 class="text-center">
            Récupération de mot de passe
        </h1>
        <form>
            <div class="form-row">
                <div class="form-group col-md-4 offset-md-4">
                    <label for="inputRecuperationMail">E-mail</label>
                    <input type="email" class="form-control" id="inputRecuperationMail" placeholder="E mail de récupération">
                </div>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">Récupérer</button>
            </div>
        </form>
    </div>


{% endblock %}