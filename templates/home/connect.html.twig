{% extends 'base.html.twig' %}


{% block title %}Connexion{% endblock %}

{% block body %}



    <div class="container" style="margin-bottom: 50px">
        <h1 class="offset-md-3 align-self-center">
            Se connecter
        </h1>
        <form id="signIn">
            <div class="form-row">
                <div class="form-group col-md-3 offset-md-3">
                    <label for="inputConnectMail">E-mail</label>
                    <input type="email" class="form-control" id="inputConnectMail" placeholder="E mail" required>
                </div>
                <div class="form-group col-md-3">
                    <label for="inputConnectPassword">Mot de passe</label>
                    <input type="password" class="form-control" id="inputConnectPassword" placeholder="Mot de passe" required>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary offset-md-3">Connexion</button>
                <a class="offset-1 swapLink" href="#">Mot de passe oubli√©</a>
                <a class="offset-1 swapLink" href="#">Toujours pas membre ?</a>
            </div>
        </form>
    </div>


{% endblock %}