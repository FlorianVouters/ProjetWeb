{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}


{% block body %}



    <div class="container" style="margin-bottom: 40px">
        <h1 class="offset-md-3 align-self-center">
            S'inscrire
        </h1>
        <form id="register">
            <div class="form-row">
                <div class="form-group col-md-3 offset-md-3">
                    <label for="inputLastName">Nom</label>
                    <input type="text" class="form-control" id="inputLastName" placeholder="Nom" required>
                </div>
                <div class="form-group col-md-3">
                    <label for="inputFirstName">Prenom</label>
                    <input type="text" class="form-control" id="inputFirstName" placeholder="Prenom" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6 offset-md-3">
                    <label for="inputMailAddress">Adresse E-mail</label>
                    <input type="text" class="form-control" id="inputMailAddress" placeholder="E Mail" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3 offset-md-3">
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" class="form-control" id="inputPassword" placeholder="Mot de passe" required>
                </div>
                <div class="form-group col-md-3">
                    <label for="inputPasswordConfirm">Confirmation</label>
                    <input type="password" class="form-control" id="inputPasswordConfirm" placeholder="Confirmation" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4 offset-md-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="cgu" required>
                        <label class="form-check-label" for="cgu">
                            J'ai bien lu les <a href="#">Conditions générales d'utilisation</a>
                        </label>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <a href="#" class="offset-md-3 swapLink">Déjà membre ?</a>
                </div>
            </div>
            <button type="submit" class="btn btn-primary offset-md-3">Inscription</button>
        </form>
    </div>


{% endblock %}