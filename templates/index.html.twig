{% extends 'base.html.twig' %}

{% block body %}
    {% if (app.user) %}
    <h1></h1>
        {% if app.user.roles[0] == 'ROLE_INVITED' %}
            <div> ATTEND QU'UN MEMBRE DU BDE ACCEPTE TA VENUE.</div>
        {% endif %}
    {% else %}
    <a href="{{ path('security_login')}}"> Connexion</a><br>
    <a href="{{ path('user_registration')}}"> Inscription</a>
    {% endif %}
    <div class="container">


        <div class="row">
            <div class="card text-left text-white border-dark bg-brown col-md-8 offset-md-2">
                <h2 class="card-header text-center"><strong>BIENVENUE SUR LE SITE DU BDE CESI !</strong></h2>
                <img class="card-img-top" src="img/bde-tls.jpg" alt="LOGO BDE CESI" style="margin-top: 15px">
                <div class="card-body text-center">
                    <p class="card-text">N'oublies pas de t'indentifier pour avoir accès à nos nombreux évènements !</p>
                    {% if app.user is defined %}
                        <a href="{{ path('security_logout') }}" class="btn btn-light col-lg-3 col-md-3" style="border: #343a40 3px solid; border-radius: 10px">Se déconnecter</a>
                    {% else %}
                        <a href="{{ path('register') }}" class="btn btn-light col-lg-3 col-md-3" style="border: #343a40 3px solid; border-radius: 10px">S'inscrire</a>
                        <a href="{{ path('security_login') }}" class="btn btn-light col-lg-3 offset-lg-1 col-md-3 offset-md-1" style="border: #343a40 3px solid; border-radius: 10px">Se connecter</a>
                    {% endif %}
                </div>
                <div class="card-footer text-center">
                    <p class="card-subtitle text-muted">Tu peux nous joindre via la page <a href="#">Contact</a> ou par mail : bde@cesi.fr</p>
                </div>
            </div>
        </div>


    </div>
{% endblock %}
