{% extends 'base.html.twig' %}

{% block title %}Your Account{% endblock %}

{% block body %}
    Bienvenue {{ app.user.firstname }} !
    <h1>Your Account</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Username</th>
            <td>{{ user.username }}</td>
        </tr>
        <tr>
            <th>Firstname</th>
            <td>{{ user.firstname }}</td>
        </tr>
        <tr>
            <th>Surname</th>
            <td>{{ user.surname }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>{{ user.roles[0] }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('user_edit') }}">edit</a>

{% endblock %}