{% extends 'base.html.twig' %}


{% block title %}Nouvel Evènement{% endblock %}

{% block body %}


    <div class="container" style="margin-bottom: 50px">
        <h1 class="text-center">
            Créer un nouvel évènement
        </h1>
        <form id="newEvent" class="needs-validation col-md-6 offset-md-3" novalidate>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="inputNameEvent">Nom de l'évènement</label>
                    <input type="text" class="form-control" id="inputNameEvent" placeholder="Nom event" required>
                    <div class="invalid-feedback">
                        Veuillez indiquer le nom
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="inputEventDescription">Description de l'évènement</label>
                <textarea class="form-control" id="inputEventDescription" rows="3" placeholder="Description" required></textarea>
                <div class="invalid-feedback">
                    Veuillez fournir une description
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="inputPrice">Frais de participation</label>
                    <input type="text" class="form-control" id="inputPrice" placeholder="Montant" required>
                    <div class="invalid-feedback">
                        Veuillez indiquer le coût (0 si gratuit)
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="inputDate">Date de l'évènement</label>
                    <input type="date" class="form-control" id="inputDate" placeholder="Date" required>
                    <div class="invalid-feedback">
                        Veuillez indiquer la date
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label for="inputEventImage">Image de l'évènement</label>
                    <input type="file" class="form-control" id="inputEventImage" required>
                    <div class="invalid-feedback">
                        Veuillez fournir une image
                    </div>
                </div>
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">Valider l'event</button>
            </div>

        </form>
    </div>


{% endblock %}

{% block scripts %}<script src="{{ asset('build/js/creation.js') }}"></script>{% endblock %}